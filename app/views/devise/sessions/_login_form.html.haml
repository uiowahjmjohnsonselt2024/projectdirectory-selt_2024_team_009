= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-container' }) do |f|
  = devise_error_messages!

  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email"

  .field
    = f.label :password
    = f.password_field :password, autocomplete: "current-password"

  .actions
    = f.submit "Log in"
