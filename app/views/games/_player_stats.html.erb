<% if @server_user %>
  <h3 class="text-primary">Your Stats:</h3>
  <ul>
    <li class="text-muted">
      <strong>Total AP Remaining:</strong>
      <%= @server_user.total_ap %>
    </li>
    <li class="text-muted">
      <strong>Turn AP Remaining:</strong>
      <%= @server_user.turn_ap %>
    </li>
    <li class="text-muted">
      <strong>Shard Balance:</strong>
      <%= @server_user.shard_balance %>
    </li>
  </ul>
<% else %>
  <h3 class="text-danger text-center">Stats Unavailable</h3>
  <p class="text-muted text-center">Unable to load your stats. Please reload the page.</p>
<% end %>