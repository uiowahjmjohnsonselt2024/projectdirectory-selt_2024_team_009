%h1 Inventory for #{current_user.username}

%div.inventory-container
  - if @inventory.items.any?
    - @inventory.items.each do |item|
      %div.inventory-item.card
        %img.card-img-top{ src: item.image_url || "default-item.png", alt: "#{item.name} image" }
        %div.card-body
          %h5.card-title= item.name
          %p.card-text= "Score: #{item.score}"
          = button_to "Discard", inventory_item_path(item), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to discard this item?" }
  - else
    %p.text-muted No items in your inventory yet.

%div.actions
  = link_to "Back to Dashboard", dashboard_path, class: "btn btn-primary"

