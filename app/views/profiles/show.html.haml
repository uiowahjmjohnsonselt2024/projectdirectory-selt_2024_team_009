- provide(:title, "Profile")
%section.profile-container.d-flex.justify-content-between.align-items-start
  %div.profile-left.w-50
    %div.profile-header
      %h1.display-4.text-color-secondary.text-shadow Profile

    %div.profile-info.mt-4.text-color-secondary
      %p
        %strong Username:
        = @user.username
      %p
        %strong Email:
        = @user.email

      %div.profile-actions.mt-3
        = link_to 'Edit Profile', edit_profile_path, class: "btn btn-primary my-2", title: 'Want to change your username, email, or password?'
        = link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-secondary", title: 'Please don\'t go! There\'s still fun awaiting for you!'

  %div.actions-right.w-50.text-center
    %div.actions-header
      %h2.display-5.text-color-secondary.text-shadow Actions

    %div.actions-list-container.mt-4
      %ul.actions-list
        %li= link_to 'Create Server', new_server_path, title: 'This creates a game that you can play on.'
        %li= link_to 'Your Servers', servers_path, title: 'This takes you to the list of games that you have created.'
        %li= link_to 'Items', items_path, title: 'This takes you to the items shop, where you can buy custom objects to boost your ability in the game.'
        %li= link_to 'View Inventory', inventories_path, title: 'This takes you to your inventory, where you can see all the things you\'ve purchased.'
        %li= link_to 'View Transactions', transactions_path, title: 'This takes you to all the purchases you have done (with money).'
        %li= link_to 'My Wallet', wallets_path, title: 'This takes you to your money (shards) management, where you can see how much you have/buy more.'
