%h1 Edit Item Details

= form_with model: @item, local: true do |form|
  %div
    = form.label :name, "Item Name"
    = form.text_field :name, placeholder: "Enter item name"

  %div
    = form.label :image_url, "Image URL"
    = form.text_field :image_url, placeholder: "Enter URL for item image"

  %div
    = form.label :score, "Item Score"
    = form.number_field :score, min: 0, placeholder: "Enter item score"

  %div.actions
    = form.submit "Save Changes", class: "btn btn-primary"

%div
  = link_to "Back to Inventory",  @inventory, class: "btn btn-secondary"
