%h1 Edit Wallet

= form_with model: @wallet, local: true do |f|
  .form-group
    = f.label :balance, "Current Balance:"
    = f.number_field :balance, class: 'form-control'

  .actions.mt-3
    = f.submit 'Update Wallet', class: 'btn btn-warning'

.actions.mt-3
  = link_to 'Back to Wallets', wallets_path, class: 'btn btn-secondary'
