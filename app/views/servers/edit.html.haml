- provide(:title, "Edit Server Info")
= action_cable_meta_tag
= content_tag(:meta, nil, name: "cable-token", content: "#{current_user&.cable_token}")

%div.d-flex.justify-content-center
  %div.row
    %div.col-md-12
      %h1.text-color-secondary Edit Server

      = form_with(model: @server, local: true) do |f|
        .form-group.text-color-secondary
          = f.label :name
          = f.text_field :name, class: 'form-control', title: "This is what the server will show up as to other players"

        .form-group.text-color-secondary
          = f.label :max_players
          = f.number_field :max_players, class: 'form-control', title:"This field controls how much players you need to play the game. Beware, you need exactly this amount of players (if you set it to 5, 3/6 players cannot play.)"

        = f.submit 'Save Changes', class: 'btn btn-primary my-2', title:"Write and create the server"

      = link_to 'Back to My Servers', servers_path, class: 'btn btn-secondary'
