%h1 Transactions

%div{ class:"overflow-scroll h-75" }
    %table{ class:"table mx-auto bg-light shadow" }
        %thead
            %tr
            %th{ class:"bg-danger text-warning fs-5 w-50" } Item Name
            %th{ class:"bg-danger text-warning fs-5 w-25" } Amount (Currency)
            %th{ class:"bg-danger text-warning fs-5 w-25" } Date

        %tbody
            %tr{ style: "text-align: center;" }
            %td{ style: "padding: 10px; border: 1px solid #ddd;" } Row 1, Cell 1
            %td{ style: "padding: 10px; border: 1px solid #ddd;" } Row 1, Cell 2
            %td{ style: "padding: 10px; border: 1px solid #ddd;" } Row 1, Cell 3
